<?xml version="1.0" encoding="utf-8"?>
<data>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block"
                     data-string="QWACO"
                     string="QWACO"
                     data-key="qwaco_contact">
                    <h2>QWACO</h2>
                    <div class="row mt16 o_settings_container" name="qwaco_setting_container">
                        <div class="col-lg-12 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <div class="content-group">
                                    <div class="row">
                                        <label for="qwaco_filter_state_ids" string="State" class="col-2 o_light_label"/>
                                        <field name="qwaco_filter_state_ids" widget="many2many_tags" options="{'no_create': True, 'no_open': True}"/>
                                    </div>
                                </div>
                                <div class="content-group">
                                    <div class="row">
                                        <label for="qwaco_filter_district_ids" string="District" class="col-2 o_light_label"/>
                                        <field name="qwaco_filter_district_ids" widget="many2many_tags" options="{'no_create': True, 'no_open': True}"/>
                                    </div>
                                </div>
                                <div class="content-group">
                                    <div class="row">
                                        <label for="qwaco_filter_ward_ids" string="Ward" class="col-2 o_light_label"/>
                                        <field name="qwaco_filter_ward_ids" widget="many2many_tags" options="{'no_create': True, 'no_open': True}"/>
                                    </div>
                                </div>
                                <div class="content-group">
                                    <div class="row">
                                        <label for="qwaco_filter_zone_ids" string="Zone" class="col-2 o_light_label"/>
                                        <field name="qwaco_filter_zone_ids" widget="many2many_tags" options="{'no_create': True, 'no_open': True}"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</data>
